<Window x:Class="LSLauncherWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSLauncherWPF"
        xmlns:userControls="clr-namespace:LSLauncherWPF.View.UserControls"
        mc:Ignorable="d"
        Icon="/Assets/Website/LSLogo.png"
        Background="Transparent"
        ResizeMode="CanMinimize"
        Title="LegacyShockwave Launcher" Height="800" Width="1200">
    <Grid>
        <userControls:NavBar x:Name="NavBarUserControl" VerticalAlignment="Top"/>
        <ContentControl Name="MainContentControl" VerticalAlignment="Top" Margin="0,55,0,0" />
        <Button Name="RefreshButton" Click="RefreshContentButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20">
            <TextBlock Foreground="White" FontSize="30">
                <Bold>REFRESH</Bold>
            </TextBlock>
        </Button>
    </Grid>
</Window>
