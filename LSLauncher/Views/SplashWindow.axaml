<Window xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:views="clr-namespace:LSLauncher.Views.UserControls"
                mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
                x:Class="LSLauncher.Views.SplashWindow"
                Title="Legacy Shockwave Launcher"
                Width="300"
                Height="300"
                CanResize="False"
                WindowStartupLocation="CenterScreen"
                ShowInTaskbar="False"
                Topmost="False"
                Icon="avares://LSLauncher/Assets/BRANDING/LSLogo.ico"
                Background="#FF000000"
                ExtendClientAreaToDecorationsHint="True"
                ExtendClientAreaChromeHints="NoChrome"
                ExtendClientAreaTitleBarHeightHint="-1">
        <Grid>
                <Image Source="avares://LSLauncher/Assets/BRANDING/LSLogo.png"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Stretch="UniformToFill"/>
        </Grid>
</Window>
