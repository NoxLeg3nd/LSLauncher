<UserControl x:Class="LSLauncherWPF.View.UserControls.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:local="clr-namespace:LSLauncherWPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="3000" d:DesignWidth="1200">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="10">
                <Grid>
                    <MediaElement Source="/Assets/Website/DiagonalLineHeader.gif"
                                  Name="DiagonalLineHeader"
                                  LoadedBehavior="Play"
                                  UnloadedBehavior="Manual"
                                  Height="300"
                                  Width="1200"
                                  Stretch="Fill"
                                  Grid.Row="0"/>
                    <TextBlock Text="LegacyShockwave Launcher (development build)" 
                               FontSize="35" 
                               Foreground="White"
                               Grid.Row="0" Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Height="Auto" FontSize="23" Foreground="White" TextAlignment="Center" Margin="10" TextWrapping="Wrap">
                        Whether you're a Burnin' <LineBreak/>
                        Rubber fanatic looking for <LineBreak/>
                        some cool mods or want to <LineBreak/>
                        play your favorite childhood <LineBreak/>
                        games, we have got you covered!
                    </TextBlock>
                    <TextBlock Height="Auto" FontSize="23" Foreground="White" Margin="10" TextAlignment="Center">
                        <Bold>NEWS</Bold> <LineBreak/> This is the first version of the LSLauncher! <LineBreak/>
                        Make sure to check the Discord server to stay <LineBreak/>
                        updated regarding the progress!
                    </TextBlock>
                    <TextBlock Height="Auto" FontSize="23" Foreground="White" Margin="10" TextAlignment="Center">
                        Do you want to be in touch <LineBreak/>
                        with our progress? Keep up <LineBreak/>
                        with modding news and more <LineBreak/>
                        in our Discord server, or send <LineBreak/>
                        us an e-mail at <LineBreak/>
                        legacyshockwave@gmail.com!
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="Auto">
                    <wv2:WebView2 Name="LSTrailer" Width="500" Height="300" Margin="15"/>
                    <TextBlock FontSize="40" Foreground="White" TextAlignment="Center" Margin="15" >
                        <Bold>Want to know how to play <LineBreak/>
                        Shockwave games? Check out <LineBreak/> 
                        the Games tabs located above!</Bold>
                    </TextBlock>
                </StackPanel>
                <Image Name="DiscordJoin" Source="/Assets/Website/LSJoinDiscord.png" Width="300" Height="300" MouseLeftButtonDown="DiscordJoin_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
